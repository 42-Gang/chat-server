generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}
enum ChatRoomType {
  PRIVATE
  GROUP
}

model ChatRoom {
  id       Int            @id @default(autoincrement())
  type     ChatRoomType

  messages ChatMessage[]  @relation("RoomMessages")
  members  ChatJoinList[] @relation("RoomJoins")

  @@map("chat_room")
}

model ChatMessage {
  id       Int      @id @default(autoincrement())
  roomId   Int      @map("room_id")
  userId   Int      @map("user_id")
  contents String
  time     DateTime

  room ChatRoom @relation(fields: [roomId], references: [id], name: "RoomMessages")

  @@map("chat_message")
}

model ChatJoinList {
  id     Int @id @default(autoincrement())
  roomId Int @map("room_id")
  userId Int @map("user_id")

  room ChatRoom @relation(fields: [roomId], references: [id], name: "RoomJoins")

  @@map("chat_join_list")
}