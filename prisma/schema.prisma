generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

enum ChatRoomType {
  PRIVATE
  GROUP
}

model ChatRoom {
  id   Int          @id @default(autoincrement())
  type ChatRoomType

  messages ChatMessage[]  @relation("RoomMessages")
  members  ChatJoinList[] @relation("RoomJoins")
}

model ChatMessage {
  id       Int      @id @default(autoincrement())
  room_id  Int
  user_id  Int
  contents String
  time     DateTime

  room ChatRoom @relation(fields: [room_id], references: [id], name: "RoomMessages")
}

model ChatJoinList {
  id      Int @id @default(autoincrement())
  room_id Int
  user_id Int

  room ChatRoom @relation(fields: [room_id], references: [id], name: "RoomJoins")
}
